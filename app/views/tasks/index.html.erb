<% if logged_in? %>
  <p>ログインユーザ名: <%= current_user.name %></p>
  <p></p><%= link_to 'ログアウト', logout_path, method: :delete %></p>
  <h1>タスク一覧ページ</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %>: <%= task.user.name %>&gt; <%= task.status %> &gt;<%= task.content %></li>
    <% end %>
  </ul>
<%= link_to '新規タスクの作成', new_task_path %>
<% else %>
<% end %>